generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model wallet {
  address String @id
  key Bytes
}

model lastBlock {
  asset String @id
  block Int
}

model invoice {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  wallet String @unique
  asset String
  amount BigInt
  recipient String
  status String
}